{
  "name": "github-pr-helper",
  "displayName": "GitHub PR Helper",
  "description": "Streamline GitHub pull request creation with AI-powered descriptions using Google Gemini, OpenAI, or Anthropic",
  "version": "1.0.0",
  "publisher": "kwickramasekara",
  "repository": "https://github.com/kwickramasekara/github-pr-helper",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "github",
    "pull request",
    "pr",
    "git",
    "gemini",
    "openai",
    "anthropic",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "githubPrHelper.createPr",
        "title": "Create Pull Request",
        "category": "GitHub PR Helper",
        "icon": "$(add)"
      },
      {
        "command": "githubPrHelper.refreshPr",
        "title": "Refresh",
        "category": "GitHub PR Helper",
        "icon": "$(refresh)"
      },
      {
        "command": "githubPrHelper.openSettings",
        "title": "Settings",
        "category": "GitHub PR Helper",
        "icon": "$(gear)"
      },
      {
        "command": "githubPrHelper.markReady",
        "title": "Mark as Ready for Review",
        "category": "GitHub PR Helper",
        "icon": "$(check)"
      },
      {
        "command": "githubPrHelper.openInGitHub",
        "title": "Open in GitHub",
        "category": "GitHub PR Helper",
        "icon": "$(link-external)"
      },
      {
        "command": "githubPrHelper.editTitle",
        "title": "Edit Title",
        "category": "GitHub PR Helper",
        "icon": "$(edit)"
      },
      {
        "command": "githubPrHelper.viewDescription",
        "title": "View/Edit Description",
        "category": "GitHub PR Helper",
        "icon": "$(open-preview)"
      },
      {
        "command": "githubPrHelper.addReviewer",
        "title": "Add Reviewer",
        "category": "GitHub PR Helper",
        "icon": "$(add)"
      },
      {
        "command": "githubPrHelper.addCopilotReviewer",
        "title": "Add Copilot Reviewer",
        "category": "GitHub PR Helper",
        "icon": "$(hubot)"
      },
      {
        "command": "githubPrHelper.removeReviewer",
        "title": "Remove Reviewer",
        "category": "GitHub PR Helper",
        "icon": "$(close)"
      },
      {
        "command": "githubPrHelper.regenerate",
        "title": "Regenerate with AI",
        "category": "GitHub PR Helper",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "githubPrHelper.createPr",
          "when": "view == githubPrHelper.prView",
          "group": "navigation@1"
        },
        {
          "command": "githubPrHelper.refreshPr",
          "when": "view == githubPrHelper.prView",
          "group": "navigation@2"
        },
        {
          "command": "githubPrHelper.openInGitHub",
          "when": "view == githubPrHelper.prView",
          "group": "navigation@3"
        },
        {
          "command": "githubPrHelper.openSettings",
          "when": "view == githubPrHelper.prView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "githubPrHelper.editTitle",
          "when": "view == githubPrHelper.prView && viewItem == prTitle",
          "group": "inline"
        },
        {
          "command": "githubPrHelper.viewDescription",
          "when": "view == githubPrHelper.prView && viewItem == prDescription",
          "group": "inline"
        },
        {
          "command": "githubPrHelper.addReviewer",
          "when": "view == githubPrHelper.prView && viewItem == reviewersHeader",
          "group": "inline"
        },
        {
          "command": "githubPrHelper.addCopilotReviewer",
          "when": "view == githubPrHelper.prView && viewItem == reviewersHeader",
          "group": "inline@2"
        },
        {
          "command": "githubPrHelper.removeReviewer",
          "when": "view == githubPrHelper.prView && viewItem == reviewer",
          "group": "inline"
        },
        {
          "command": "githubPrHelper.markReady",
          "when": "view == githubPrHelper.prView && viewItem == prStatusDraft",
          "group": "inline"
        },
        {
          "command": "githubPrHelper.regenerate",
          "when": "view == githubPrHelper.prView && viewItem == prDescription",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "GitHub PR Helper",
      "properties": {
        "githubPrHelper.provider": {
          "type": "string",
          "enum": [
            "google",
            "openai",
            "anthropic"
          ],
          "enumDescriptions": [
            "Google Gemini (requires a Google Gemini API key)",
            "OpenAI (requires an OpenAI API key)",
            "Anthropic (requires an Anthropic API key)"
          ],
          "default": "google",
          "description": "AI provider to use for PR content generation",
          "order": 1
        },
        "githubPrHelper.providerApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected AI provider",
          "order": 2
        },
        "githubPrHelper.model": {
          "type": "string",
          "enum": [
            "google/gemini-2.5-flash",
            "google/gemini-3.1-flash",
            "openai/gpt-4.1-mini",
            "openai/gpt-5-mini",
            "anthropic/claude-sonnet-4-6",
            "anthropic/claude-haiku-4-5",
            "custom"
          ],
          "enumDescriptions": [
            "Google Gemini 2.5 Flash — fast and cost-efficient",
            "Google Gemini 3.1 Flash — latest frontier Flash model",
            "OpenAI GPT-4.1 Mini — fast, great for coding tasks",
            "OpenAI GPT-5 Mini — compact, cost-efficient reasoning",
            "Anthropic Claude Sonnet 4.6 — frontier coding and agents",
            "Anthropic Claude Haiku 4.5 — fastest Anthropic model",
            "Custom — enter your own model ID below"
          ],
          "default": "google/gemini-2.5-flash",
          "description": "AI model to use. Select a preset or choose 'custom' to enter a model ID manually.",
          "order": 3
        },
        "githubPrHelper.customModel": {
          "type": "string",
          "default": "",
          "description": "Custom model ID (only used when AI Model is set to 'custom'). Find model IDs in the provider's API docs: Google (ai.google.dev/gemini-api/docs/models), OpenAI (platform.openai.com/docs/models), Anthropic (docs.anthropic.com/en/docs/about-claude/models).",
          "order": 4
        },
        "githubPrHelper.baseBranch": {
          "type": "string",
          "default": "main",
          "description": "Default base branch for PRs",
          "order": 5
        },
        "githubPrHelper.defaultReviewers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Default reviewers (GitHub usernames or team slugs)",
          "order": 6
        },
        "githubPrHelper.titleTemplate": {
          "type": "string",
          "default": "Generate a concise PR title (max 72 chars) that summarizes the changes",
          "description": "Custom instructions for LLM title generation",
          "order": 7
        },
        "githubPrHelper.descriptionTemplate": {
          "type": "string",
          "default": "Generate a PR description with: ## Summary, ## Changes Made (bullet points), ## Testing Notes",
          "description": "Custom instructions for LLM description generation",
          "order": 8
        },
        "githubPrHelper.promptOnBranchPublish": {
          "type": "string",
          "enum": [
            "ask",
            "always",
            "never"
          ],
          "enumDescriptions": [
            "Ask before creating a PR when pushing a new branch",
            "Always create a PR when pushing a new branch",
            "Never prompt to create a PR"
          ],
          "default": "ask",
          "description": "Behavior when a branch is published to remote",
          "order": 9
        },
        "githubPrHelper.enableCopilotReviewer": {
          "type": "boolean",
          "default": false,
          "description": "Automatically assign GitHub Copilot as a reviewer when creating PRs",
          "order": 7
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-pr-helper",
          "title": "GitHub PR Helper",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "github-pr-helper": [
        {
          "id": "githubPrHelper.prView",
          "name": "Pull Request"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "githubPrHelper.prView",
        "contents": "No pull request found for this branch.\n[Create Pull Request](command:githubPrHelper.createPr)\n[Open Settings](command:githubPrHelper.openSettings)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "ai": "^5.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@ai-sdk/anthropic": "^2.0.0",
    "marked": "^12.0.0"
  },
  "license": "MIT"
}
